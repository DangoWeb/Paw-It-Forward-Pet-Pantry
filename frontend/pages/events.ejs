<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('../partials/head.ejs'); %>
</head>

<body>
	<div class="body">
		<%- include('../partials/header.ejs'); %>
		<% if (cms.events && cms.events.length > 0) { cms.events.sort((a, b) => a._o - b._o).forEach(event => { %>
		<a class="item" href="<%= event.link %>">
			<div class="image" style="background-image: url('<%- vars.asset_prefix %><%= event.image.path %>');" alt="<%= event.title %>"></div>
			<div class="inner">
				<% if (((new Date(event.startDate)) < (new Date())) && ((new Date(event.endDate)) > (new Date()))) { %><div class="alert"><img src="<%- vars.domain %>/paw.png"> Happening Now</div><% } %>
				<h5><%= event.title %></h5>
				<p><%= event.description %></p>
			</div>
		</a>
		<% })} else { %>
		<p>No events</p>
		<% } %>
		<%- include('../partials/footer.ejs'); %>
	</div>
</body>
<%- include('../partials/foot.ejs'); %>

</html>